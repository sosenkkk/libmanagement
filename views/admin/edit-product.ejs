<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="form_container">
                <% if(errorMessage){ %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                    <% } %>
                <form class="product-form" action="/admin/<% if(editing ){%>edit-product<%} else{%>add-product<%} %>"
                    method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" value="<% if(editing || hasError){ %><%=  product.title %><%} %>">
                    </div>
                 
                    
                    <div class="form-control">
                        <label for="price">Copies</label>
                        <input type="number" name="copies" id="copies" step="0.01"  value="<% if(editing || hasError){ %><%=  product.copies %><%} %>">
                    </div>
                    <div class="form-control">
                        <label for="author">Author Name</label>
                        <input name="author" id="author" type="text"><% if(editing || hasError){ %><%=  product.author %><%} %></input>
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="5"><% if(editing || hasError){ %><%=  product.description %><%} %></textarea>
                    </div>
                    <% if (editing) { %>
                        <input type="hidden" value="<%= product._id %>" name="productId">
                    <% } %>
                    <button class="btn" type="submit">
                        <% if(editing ) {%> Update Book <% } else {%> Add Book <%} %>
                    </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>