<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/order.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (issue.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% issue.forEach(issue => { %>
                        <li class="orders__item">
                            <h1>Issue - # <%= issue._id %> </h1>
                            <ul class="orders__products">
                                <% issue.books.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.book.title %> (<%= p.quantity %>) </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>